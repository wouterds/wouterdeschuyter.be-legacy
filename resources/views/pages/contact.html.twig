{% extends '_base.html.twig' %}

{% block title %}Contact - {{ app.config.get('APP_NAME') }}{% endblock %}

{% block extraMeta %}
    <meta name="description" content="If you're writing for a project or to work together, please include as much details as possible (idea, target, timeline, budget, ..). For everything else, write as you please. I'll be more than happy to reply to your email!">
{% endblock %}

{% block opengraph %}

    <!-- opengraph -->
    <meta property="og:title" content="Contact - {{ app.config.get('APP_NAME') }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ app.config.get('APP_URL') }}{{ page.path }}">
    <meta property="fb:pages" content="{{ app.config.get('FB_PAGE_ID') }}" />
    <meta property="og:site_name" content="{{ app.config.get('APP_NAME') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="h2">Contact</h2>
        <p>
            If you're writing for a project or to work together, please include as much details as possible (idea, target, timeline, budget, ..).
            For everything else, write as you please.
            I'll be more than happy to reply to your email!
        </p>

        <form class="container-fluid form" role="form" method="post" action="{{ app.router.pathFor('contact_post') }}">
            <div class="row">
                <div class="col-sm-6 input-wrapper">
                    <label for="name" class="label">Full name</label>
                    <input type="text" id="name" name="name" class="input">
                </div>
                <div class="col-sm-6 input-wrapper">
                    <label for="email" class="label">Email address</label>
                    <input type="text" id="email" name="email" class="input">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 input-wrapper">
                    <label for="subject" class="label">Subject</label>
                    <input type="text" id="subject" name="subject" class="input">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 input-wrapper">
                    <label for="message" class="label">Message</label>
                    <textarea name="message" id="message" cols="30" rows="6" class="input"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 input-wrapper">
                    <button type="submit" class="input button" disabled data-loader="true">
                        <span class="button__text">Send Message</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block structuredData %}
<script type="application/ld+json">
{
    "@context": "http://schema.org",
    "@type": "Organization",
    "url": "{{ app.config.get('APP_URL') }}",
    "name": "Wouter De Schuyter",
    "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+32479228210",
        "contactType": "Customer Service"
    }
}
</script>
{% endblock %}
