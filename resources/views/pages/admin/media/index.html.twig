{% extends '_base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h2 class="h2">Media <span class="h2__action">(<a href="{{ app.router.pathFor('admin.media.add') }}">Add</a>)</span></h2>

        <table class="table">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Content-Type</th>
                <th scope="col">Size</th>
                <th scope="col">MD5 Checksum</th>
                <th scope="col">Uploaded by</th>
                <th scope="col">Created at</th>
                <th scope="col">Updated at</th>
                <th scope="col">Actions</th>
            </tr>
            {% for mediaItem in media %}
                <tr>
                    <td>{{ mediaItem.id }}</td>
                    <td>{{ mediaItem.name }}</td>
                    <td>{{ mediaItem.contentType }}</td>
                    <td>{{ mediaItem.size|readable_filesize }}</td>
                    <td>{{ mediaItem.md5 }}</td>
                    <td>{% if attribute(users, mediaItem.userId.value).name %}{{ attribute(users, mediaItem.userId.value).name }}{% else %}--{% endif %}</td>
                    <td title="{{ mediaItem.createdAt }}">{{ mediaItem.createdAt|date('d.m.Y, H:i') }}</td>
                    <td title="{{ mediaItem.updatedAt }}">{% if mediaItem.updatedAt %}{{ mediaItem.updatedAt|date('d.m.Y, H:i') }}{% else %}--{% endif %}</td>
                    <td class="actions">
                        <a href="/static/media/{{ mediaItem.path }}">View</a>
                        <a href="{{ app.router.pathFor('admin.media.delete', {'id': mediaItem.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
