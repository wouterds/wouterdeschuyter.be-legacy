<header class="header">
    <div class="container-fluid">
        <h1 class="header__title">{{ app.config.get('APP_NAME') }}</h1>

        <nav class="header__navigation">
            <ul>
                <li class="header__navigation__item{% if page.info.dashedCase == 'home' %} header__navigation__item--active{% endif %}">
                    <a class="header__navigation__item-link" href="{{ app.router.pathFor('home') }}">Home</a>
                </li>
                <li class="header__navigation__item{% if page.info.dashedCase == 'about' %} header__navigation__item--active{% endif %}">
                    <a class="header__navigation__item-link" href="{{ app.router.pathFor('about') }}">About</a>
                </li>
                <li class="header__navigation__item{% if page.info.dashedCase == 'blog' %} header__navigation__item--active{% endif %}">
                    <a class="header__navigation__item-link" href="{{ app.router.pathFor('blog') }}">Blog</a>
                </li>
                <li class="header__navigation__item{% if page.info.dashedCase == 'contact' %} header__navigation__item--active{% endif %}">
                    <a class="header__navigation__item-link" href="{{ app.router.pathFor('contact') }}">Contact</a>
                </li>
            </ul>
        </nav>
    </div>
</header>
