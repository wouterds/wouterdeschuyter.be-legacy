<nav class="blog-pagination" role="navigation">
    {% if blogPostPage > 2 %}
        <a class="blog-pagination__newer-posts" href="{{ app.router.pathFor('blog.page', { page: (blogPostPage - 1) }) }}">
            <span class="blog-pagination__link-icon">&#x2190;</span>
            <span class="blog-pagination__link-text"> Newer Posts</span>
        </a>
    {% elseif blogPostPage > 1 %}
        <a class="blog-pagination__newer-posts" href="{{ app.router.pathFor('index') }}">
            <span class="blog-pagination__link-icon">&#x2190;</span>
            <span class="blog-pagination__link-text"> Newer Posts</span>
        </a>
    {% endif %}

    <span class="blog-pagination__page-number">Page {{ blogPostPage }} of {{ maxBlogPostPage }}</span>

    {% if blogPostPage < maxBlogPostPage %}
        <a class="blog-pagination__older-posts" href="{{ app.router.pathFor('blog.page', { page: (blogPostPage + 1) }) }}">
            <span class="blog-pagination__link-text">Older Posts </span>
            <span class="blog-pagination__link-icon">&#x2192;</span>
        </a>
    {% endif %}
</nav>
