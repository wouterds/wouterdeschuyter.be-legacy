<footer class="footer{% if footer.admin %} footer--admin{% endif %}">
    <div class="container{% if footer.admin %}-fluid{% endif %}">
        &copy; Copyright {{ 'now'|date('Y') }} {{ app.config.get('APP_NAME') }}
        <br>
        Page generated in
        {% if app.report.getElapsedTime().getValue() > 1000 %}
            {{ app.report.getElapsedTime().inSeconds() }} s
        {% else %}
            {{ app.report.getElapsedTime().inMilliseconds() }} ms
        {% endif %}
        using {{ app.report.getUsedMemory().getValue()|readable_filesize }},
        running using Docker on a Raspberry Pi
        <i class="fa fa-heart" aria-hidden="true"></i>
    </div>
</footer>
