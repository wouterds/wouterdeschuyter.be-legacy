{% if user %}
    <li class="header__navigation__item{% if page.info.dashedCase == 'admin-index' %} header__navigation__item--active{% endif %}">
        <a class="header__navigation__item-link" href="{{ app.router.pathFor('admin') }}">Overview</a>
    </li>
    <li class="header__navigation__item{% if 'admin-users' in page.info.dashedCase %} header__navigation__item--active{% endif %}">
        <a class="header__navigation__item-link" href="{{ app.router.pathFor('admin.users') }}">Users</a>
    </li>
    <li class="header__navigation__item{% if 'admin-media' in page.info.dashedCase %} header__navigation__item--active{% endif %}">
        <a class="header__navigation__item-link" href="{{ app.router.pathFor('admin.media') }}">Media</a>
    </li>
    <li class="header__navigation__item{% if 'admin-blog' in page.info.dashedCase %} header__navigation__item--active{% endif %}">
        <a class="header__navigation__item-link" href="{{ app.router.pathFor('admin.blog') }}">Blog</a>
    </li>
    <li class="header__navigation__item{% if page.info.dashedCase == 'admin-sign-out' %} header__navigation__item--active{% endif %}">
        <a class="header__navigation__item-link" href="{{ app.router.pathFor('admin.sign-out') }}">Sign Out</a>
    </li>
{% else %}
    <li class="header__navigation__item{% if page.info.dashedCase == 'admin-sign-in' %} header__navigation__item--active{% endif %}">
        <a class="header__navigation__item-link" href="{{ app.router.pathFor('admin.users.sign-in') }}">Sign In</a>
    </li>
    <li class="header__navigation__item{% if page.info.dashedCase == 'admin-sign-up' %} header__navigation__item--active{% endif %}">
        <a class="header__navigation__item-link" href="{{ app.router.pathFor('admin.users.sign-up') }}">Sign Up</a>
    </li>
{% endif %}
